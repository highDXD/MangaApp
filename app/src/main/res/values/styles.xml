<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/azul</item>
        <item name="colorPrimaryDark">@color/mc_blue</item>
        <item name="colorAccent">@color/darkometrat</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="AppTheme.h1_black">
        <item name="android:textColor">@color/preto</item>
        <item name="android:textSize">25sp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="AppTheme.h1_white">
        <item name="android:textColor">@color/branco</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="AppTheme.lbl_black">
        <item name="android:textColor">@color/preto</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="AppTheme.txt">
        <item name="android:textColor">@color/preto</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
