<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.mangaapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Interface.SplashLoading"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Interface.TelaPrincipal"
            android:label="@string/title_activity_tela_principal"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Interface.TelaEditoras"
            android:label="@string/title_activity_tela_editoras"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Interface.TelaTitulos"
            android:label="@string/title_activity_tela_titulos"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Interface.TelaTituloSelecionado"
            android:label="@string/title_activity_tela_titulo_selecionado"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Interface.TelaUltimosAdicionados"
            android:label="@string/title_activity_tela_ultimos_adicionados"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Interface.CrudTitulo"
            android:label="@string/title_activity_crud_titulo"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>